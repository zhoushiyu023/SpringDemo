<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhoushiyu.mapping.userMapper">

	<resultMap id="BaseResultMap" type="com.zhoushiyu.domain.User">
		<id column="user_id" property="userID" jdbcType="INT" />
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="user_password" property="userPassword"
			jdbcType="VARCHAR" />
		<result column="has_number" property="hasNumber" jdbcType="INT" />
		<result column="update_time" property="updateTime" jdbcType="DATE" />
	</resultMap>

	<select id="getUserMsg" parameterType="java.lang.String"
		resultType="com.zhoushiyu.domain.User">
		SELECT * FROM zsy_users WHERE user_name =
		#{userName,jdbcType=VARCHAR} AND
		user_password =
		#{userPassword,jdbcType=VARCHAR}
	</select>

	<insert id="addUser" parameterType="com.zhoushiyu.domain.User">
		INSERT INTO zsy_user
		(user_name, user_password) VALUES (
		#{userName,jdbcType=VARCHAR},
		#{userPassword,jdbcType=VARCHAR})
	</insert>

	<delete id="deleteUser" parameterType="int">
		DELETE TABLE zsy_user
		WHERE user_id= ${userID}
	</delete>

</mapper>
